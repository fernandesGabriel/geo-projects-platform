{
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "files.exclude": {
    "**/*.tsbuildinfo": true,
    "**/._*": true,
    "**/.turbo": true,
    "**/.vercel": true,
    "**/dist": true,
    "**/node_modules": true,
  },
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  "prettier.useEditorConfig": true,
  "prettier.useTabs": false,
}